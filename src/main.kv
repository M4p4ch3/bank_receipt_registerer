
<OpField@BoxLayout>
    orientation: 'horizontal'

<OpScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        padding: "10dp"
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            text: root.app.dict.get("operation").title()
            font_size: "25dp"
        GridLayout:
            id: gridLayout
            spacing: "10dp"
            cols: 1
            row_default_height: "35dp"
            row_force_default: "True"
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("date")
                Label:
                    id: date_label_val
                    size_hint: .5, 1
                Button:
                    size_hint: .25, 1
                    text: root.app.dict.get("select")
                    on_release:
                        root.choose_date_btn_cb()
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("mode")
                ModeDropDownList:
                    id: mode_drop
                    size_hint: .75, 1
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("tier")
                OpTextInput:
                    id: tier_input
                    size_hint: .75, 1
                    hint_text: root.app.dict.get("tier")
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("category")
                OpTextInput:
                    id: cat_input
                    size_hint: .75, 1
                    hint_text: root.app.dict.get("category")
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("description")
                OpTextInput:
                    id: desc_input
                    size_hint: .75, 1
                    hint_text: root.app.dict.get("description")
            OpField:
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("amount")
                OpTextInput:
                    id: amount_input
                    size_hint: .75, 1
                    input_type: "number"
                    hint_text: '0.0'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                Button:
                    size_hint: .5, 1
                    text: root.app.dict.get("cancel")
                    on_release:
                        root.cancel_btn_cb()
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Button:
                    size_hint: .5, 1
                    text: root.app.dict.get("save")
                    on_release:
                        root.save_btn_cb()

<OpListScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            text: root.app.dict.get("operations").title()
            font_size: "25dp"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            StackLayout:
                id: op_list_layout
                spacing: "5dp"
                orientation: "tb-lr"
                size_hint: 1, None
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                Button:
                    id: button_settings
                    size_hint: .5, 1
                    text: root.app.dict.get("settings")
                    on_release:
                        root.settings_btn_cb()
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Button:
                    size_hint: .5, 1
                    text: root.app.dict.get("add")
                    on_release:
                        root.add_btn_cb()

<SettingsScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            text: root.app.dict.get("settings").title()
            font_size: "25dp"
        GridLayout:
            id: gridLayout
            spacing: "10dp"
            cols: 1
            row_default_height: "35dp"
            row_force_default: "True"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("language")
                LanguageDropDownList:
                    id: lang_drop
                    size_hint: .75, 1
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    size_hint: .25, 1
                    text: root.app.dict.get("debug")
                CheckBox:
                    id: debug_check
                    size_hint: .75, 1
                    hint_text: 'off'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                Button:
                    size_hint: .5, 1
                    text: root.app.dict.get("cancel")
                    on_release:
                        root.cancel_btn_cb()
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Button:
                    size_hint: .5, 1
                    text: root.app.dict.get("save")
                    on_release:
                        root.save_btn_cb()
