
<OperationField@BoxLayout>
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<OperationMode@Button>
    size_hint_y: None
    height: "35dp"

<OperationFieldMode@OperationField>
    Label:
        size_hint: .3, 1
        text: 'mode'
    DropDown:
        id: drop
        on_select: button.text = f'{args[1]}'
        OperationMode:
            id: cb
            text: 'cb'
            on_release: drop.select(self.text)
        OperationMode:
            text: 'cb web'
            on_release: drop.select(self.text)
        OperationMode:
            text: 'paypal'
            on_release: drop.select(self.text)
        OperationMode:
            text: 'vir'
            on_release: drop.select(self.text)
        OperationMode:
            text: 'cash'
            on_release: drop.select(self.text)
        OperationMode:
            text: 'cheque'
            on_release: drop.select(self.text)
    Button:
        id: button
        size_hint: .7, 1
        text: cb.text
        on_parent: drop.dismiss()
        on_release: drop.open(self)

<OperationScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        padding: "10dp"
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            text: 'Operation'
            font_size: "25dp"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        GridLayout:
            spacing: "10dp"
            cols: 1
            row_default_height: "35dp"
            row_force_default: "True"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            OperationField:
                Label:
                    size_hint: .3, 1
                    text: 'date'
                Label:
                    id: date_label_val
                    size_hint: .5, 1
                Button:
                    size_hint: .2, 1
                    text: "choose"
                    on_release:
                        root.choose_date_btn_cb()
            OperationFieldMode
                id: mode
            OperationField:
                Label:
                    size_hint: .3, 1
                    text: 'tier'
                TextInput:
                    id: tier_input
                    size_hint: .7, 1
                    hint_text: 'tier'
            OperationField:
                Label:
                    size_hint: .3, 1
                    text: 'category'
                TextInput:
                    id: cat_input
                    size_hint: .7, 1
                    hint_text: 'category'
            OperationField:
                Label:
                    size_hint: .3, 1
                    text: 'description'
                TextInput:
                    id: desc_input
                    size_hint: .7, 1
                    hint_text: 'description'
            OperationField:
                Label:
                    size_hint: .3, 1
                    text: 'amount'
                TextInput:
                    id: amount_input
                    size_hint: .7, 1
                    input_type: "number"
                    hint_text: '0.0'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                Button:
                    size_hint: .4, 1
                    text: "cancel"
                    on_release:
                        root.cancel_btn_cb()
                        root.manager.transition.direction = "right"
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Button:
                    size_hint: .4, 1
                    text: "save"
                    on_release:
                        root.save_btn_cb()
                        root.manager.transition.direction = "right"

<OperationListScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        Label:
            size_hint: 1, .1
            text: 'Operation list'
            font_size: "25dp"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            StackLayout:
                id: op_list_layout
                orientation: "tb-lr"
                size_hint: 1, None
        AnchorLayout:
            size_hint: 1, .1
            anchor_x: 'right'
            anchor_y: 'center'
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            Button:
                size_hint: .2, 1
                text: "add"
                on_release:
                    root.add_btn_cb()
                    root.manager.transition.direction = "left"
