
<OpField@BoxLayout>
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<OpScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        padding: "10dp"
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            text: 'Operation'
            font_size: "25dp"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        GridLayout:
            id: gridLayout
            spacing: "10dp"
            cols: 1
            row_default_height: "35dp"
            row_force_default: "True"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            OpField:
                Label:
                    size_hint: .25, 1
                    text: 'date'
                Label:
                    id: date_label_val
                    size_hint: .5, 1
                Button:
                    size_hint: .25, 1
                    text: "choose"
                    on_release:
                        root.choose_date_btn_cb()
            OpModeField:
                id: mode
            OpField:
                Label:
                    size_hint: .25, 1
                    text: 'tier'
                OpTextInput:
                    id: tier_input
                    size_hint: .75, 1
                    hint_text: 'tier'
            OpField:
                Label:
                    size_hint: .25, 1
                    text: 'category'
                OpTextInput:
                    id: cat_input
                    size_hint: .75, 1
                    hint_text: 'category'
            OpField:
                Label:
                    size_hint: .25, 1
                    text: 'description'
                OpTextInput:
                    id: desc_input
                    size_hint: .75, 1
                    hint_text: 'description'
            OpField:
                Label:
                    size_hint: .25, 1
                    text: 'amount'
                OpTextInput:
                    id: amount_input
                    size_hint: .75, 1
                    input_type: "number"
                    hint_text: '0.0'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                Button:
                    size_hint: .4, 1
                    text: "cancel"
                    on_release:
                        root.cancel_btn_cb()
                        root.manager.transition.direction = "right"
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'center'
                Button:
                    size_hint: .4, 1
                    text: "save"
                    on_release:
                        root.save_btn_cb()
                        root.manager.transition.direction = "right"

<OpListScreen>:
    BoxLayout:
        padding: "10dp"
        spacing: "10dp"
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        Label:
            size_hint: 1, .1
            text: 'Operation list'
            font_size: "25dp"
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            StackLayout:
                id: op_list_layout
                spacing: "5dp"
                orientation: "tb-lr"
                size_hint: 1, None
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
        AnchorLayout:
            size_hint: 1, .1
            anchor_x: 'right'
            anchor_y: 'center'
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            Button:
                size_hint: .2, 1
                text: "add"
                on_release:
                    root.add_btn_cb()
                    root.manager.transition.direction = "left"
